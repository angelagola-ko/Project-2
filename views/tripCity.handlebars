{{#each trip}}
    <div class="jumbotron d-flex justify-content-center" style="background-image: url('{{photo}}'); background-size: 100%; background-position: center;"
        <!-- Location -->
        <h4 class="text-center" id="location" style="color: #FFFFFF; background: rgb(60, 60, 60, 0.4); text-shadow: #474747 3px 5px 2px; font-size: 20rem; width:100%">{{location}}</h4>
    </div>

    <p class="text-center" style="font-size: 3rem;">{{details}}</p>
    <br>
    <div class="text-center">
        <button type="button" class="btn btn-danger text-center">Remove from trip</button>
    </div>
    <br>
    <div class="text-center">
        <a type="button" class="btn btn-success text-center" href="/trips">Return to trip</a>
    </div>
{{/each}}


<script src="/assets/js/trip-delete.js"></script>