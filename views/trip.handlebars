<!-- Title -->
<h1 class="jumbotron text-center text-info display-1">trips</h1>


<!-- If the user is logged in, allow them to add to trips and also render their trips -->
{{!-- {{#if loggedIn}} --}}
<section class="container">
    <!-- Add to trips -->
    <h4 class="text-center">Add new trips</h4>
    <form class="trips-form text-center d-flex justify-content-center">
        <input type="text" name="location" id="location" placeholder="Enter City" />
        <textarea type="text" name="details" id="details" placeholder="enter details"/></textarea>
        <button type="submit" class="btn btn-info"/>Add</button>
    </form>
</section>

<br>

<section>
    <!-- Render trips -->
    <h4 class="jumbotron text-center text-info">My trips</h4>
    <div class='row justify-content-center'>
        <a href="/trips"></a>
            {{#each trip}}
                {{> trip-details}}
            {{/each}}
        </a>
    </div>
</section>


<script src="/assets/js/trip-post.js"></script>
<!-- End of logged in page -->


