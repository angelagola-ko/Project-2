<section class="card" style="width: 40rem;">
    <!-- The contents of this card links to the explore page using the explore ID -->
    <a class='card bg-dark text-white' href="/explore/{{location}}">
        <!-- The card contains the first painting of the gallery -->
        <img class="card-img img-thumbnail" src="{{photo}}" alt="Photo of {{location}}">
        <div class="card-img-overlay text-center d-flex flex-column justify-content-center">
            <!-- The card contains the explore location name as the card header -->
            <header class="text-center card-title" style="color: #FFFFFF; border-radius: 25px; background: rgb(60, 60, 60, 0.7); text-shadow: #474747 3px 5px 2px; font-size: 2rem;">{{location}}</header>
        </div>
    </a>
</section>