<section class="card" style="width: 18rem;">
    <!-- The contents of this card links to the trips page using the trips ID -->
    <a class='card bg-dark text-white' href="/trips/{{location}}">
        <!-- The card contains the first painting of the gallery -->
        <img class="card-img img-thumbnail" style="width: 18rem; height: 19rem;" src="{{photo}}" alt="Photo of {{location}}">
        <div class="card-img-overlay text-center d-flex flex-column justify-content-center">
            <!-- The card contains the trips location name as the card header -->
            <header class="text-center card-title" style="color: #FFFFFF; border-radius: 25px; background: rgb(60, 60, 60, 0.7); text-shadow: #474747 3px 5px 2px; font-size: 2rem;">{{location}}</header>
            <p class="text-center" style="color: #FFFFFF; background: rgb(60, 60, 60, 0.7); text-shadow: #474747 3px 5px 2px; font-size: .85rem;">{{details}}</p>
        </div>
    </a>
</section>